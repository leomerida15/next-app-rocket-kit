{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noDebugger": "off",
        "noConstEnum": "off",
        "noAsyncPromiseExecutor": "off"
      }
    }
  },
  "formatter": {
    "formatWithErrors": true,
    "enabled": true,
    "indentStyle": "tab",
    "indentSize": 2,
    "lineWidth": 80,
    "ignore": []
  }
}
